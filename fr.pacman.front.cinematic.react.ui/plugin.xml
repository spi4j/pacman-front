<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
    <extension 
          point="org.eclipse.core.expressions.propertyTesters">
        <propertyTester
            id = "fr.pacman.front.tester.server"
            namespace="fr.pacman.front.react"
            properties="canShowMenu"
            type="org.eclipse.core.resources.IResource"
            class="fr.pacman.front.react.ui.testers.PacmanUIServerPropertyTester"/>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="fr.pacman.front.react.ui.handlers.reactGeneratorsHandler"
            commandId="fr.pacman.front.react.ui.commands.reactGeneratorCommand">
      </handler>
      <handler
            class="fr.pacman.front.react.ui.handlers.reactValidationGeneratorsHandler"
            commandId="fr.pacman.front.react.validation.ui.commands.ValidationGeneratorCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               id="fr.pacman.front.ui.menus.generators"
               icon="icons/pacmug.png"
               tooltip="Liste des générateurs Cali"
               label="Générateurs Cali">
            <command
                  icon="icons/generate.png"
                  commandId="fr.pacman.front.react.ui.commands.reactGeneratorCommand"
                  id="fr.pacman.front.react.ui.commands.reactGeneratorCommand" 
                  label="Génération du fournisseur pour les services">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="selection">
                     <iterate
                           ifEmpty="false"
                           operator="and">
                        <and>
                           <instanceof
                                 value="org.eclipse.core.resources.IFile">
                           </instanceof>
                           <test
                                 property="org.eclipse.core.resources.extension"
                                 value="soa">
                           </test>
                           <test 
                                 forcePluginActivation="true"
                                 property="fr.pacman.front.react.canShowMenu"/>
                        </and>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
            <command
                  icon="icons/validate.png"
                  commandId="fr.pacman.front.react.validation.ui.commands.ValidationGeneratorCommand"
                  id="fr.pacman.front.react.validation.ui.commands.ValidationGeneratorCommand" 
                  label="Validation du fournisseur pour les services">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="selection">
                     <iterate
                           ifEmpty="false"
                           operator="and">
                        <and>
                           <instanceof
                                 value="org.eclipse.core.resources.IFile">
                           </instanceof>
                           <test
                                 property="org.eclipse.core.resources.extension"
                                 value="soa">
                           </test>
                           <test 
                                 forcePluginActivation="true"
                                 property="fr.pacman.front.react.canShowMenu"/>
                        </and>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="fr.pacman.front.react.ui.commands.generatorsCategory"
            name="Generators">
      </category>
      <command
            categoryId="fr.pacman.front.react.ui.commands.generatorsCategory"
            id="fr.pacman.front.react.ui.commands.reactGeneratorCommand"
            name="Génération du fichier de service">
      </command>
      <command
            categoryId="fr.pacman.front.react.ui.commands.generatorsCategory"
            id="fr.pacman.front.react.validation.ui.commands.ValidationGeneratorCommand"
            name="Validation du fichier de service">
      </command>
   </extension>
</plugin>

